{% extends 'base.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-2 m-md-4"></div>
        <div class="col-lg-6">
            <br>
            <div class="card bg-light">
                <div class="card-body text-center">
                    <div class="form-row">
                        <div class="form-group text-center col-lg-12 ">
    <h1>Vehicle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicle.id }}</td>
            </tr>
            <tr>
                <th>Appointment</th>
                <td>{{ vehicle.appointment }}</td>
            </tr>
            <tr>
                <th>EngineType</th>
                <td>{{ vehicle.engineType }}</td>
            </tr>
            <tr>
                <th>NumberOfPassengers</th>
                <td>{{ vehicle.numberOfPassengers }}</td>
            </tr>
            <tr>
                <th>MaxSpeed</th>
                <td>{{ vehicle.maxSpeed }}</td>
            </tr>
            <tr>
                <th>FuelCost</th>
                <td>{{ vehicle.fuelCost }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ vehicle.weight }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ vehicle.size }}</td>
            </tr>

                            <td>
                                <a class="btn  btn-outline-dark text-decoration-none" href="{{ path('vehicle_index') }}" role="button">Back to list</a>
                            </td>
                            <td>
                                <a class="btn  btn-outline-dark text-decoration-none" href="{{ path('vehicle_edit', {'id': vehicle.id}) }}" role="button">Edit</a>
                            </td>
        </tbody>
    </table>

    {{ include('vehicle/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
